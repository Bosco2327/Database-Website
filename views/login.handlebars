<div class="login-box">
  <form class="login" action="/login" method="post">
    <input type="text" name="id" placeholder="Employee ID">
    <input type="password" name="password" placeholder="Password">
    <input type="submit" value="Login" class="button">
  </form>
  {{#each errors}}
    <div class="error">
      {{this}}
    </div>
  </div>
{{/each}}
<div class="bg"></div>
